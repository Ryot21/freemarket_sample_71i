%main.ItemIntroduction
  = render partial: "header"
  .ItemIntroduction__Inner
    %h1
      = @item.name
    .ItemIntroduction__MainContents
      .PhotoBox
        .PhotoBox__Inner
          - @item.images.each_with_index do |img,i|
            = image_tag(img.src.url, id: "main_#{i}")

      .ItemShowBox
        %table
          %thead
            %tr.Top-tabel
              %th.left 出品者
              %th
                = @user.nickname
                .btn-group
                  = link_to user_path do
                    %i.fa.fa-smile{ :style => "color: red"}> 63
                  = link_to user_path do
                    %i.fa.fa-meh{ :style => "color: orange"}> 0
                  = link_to user_path do
                    %i.fa.fa-frown{ :style => "color: blue"}> 63
          %tbody
            %tr
              %th.left カテゴリー
              %th
                = @category.name
          %tbody
            %tr
              %th.left ブランド
              %th
                = @item.brand
          %tbody
            %tr
              %th.left 商品の状態
              %th 
                = @item.condition.name
          %tbody
            %tr
              %th.left 配送料の負担
              %th
                = @item.ship_method.name
          %tbody
            %tr
              %th.left 配送方法
              %th
                = @item.delivery_date.name
          %tbody
            %tr
              %th.left 発送元の地域
              %th
                = @item.prefecture.name

    .ItemPriceBox
      .ItemPriceBox__P.right
        %span.Price-B ¥
        %span.Price-B 
          = @item.price
      .ItemPriceBox__D.left
        %span.Price-S (税込)
        %span.Price-S 送料込み
    = link_to "#" do
      .ItemBuyBtn.b-radius
        購入画面に進む
    .ItemBox
      %p.ItemBox__Inner
        = @item.version
    .Item-Button-Container
      .Item-Button-Container__Left
        = link_to "#", class: "IineBtn" do
          %i.fa.fa-thumbs-up{ :style => "color: red"}
          %p いいね！

      .Item-Button-Container__Center
        = link_to "#", class: "TuhouBtn" do
          %i.fa.fa-hand-middle-finger{ :style => "color: black"}
          %p 通報
      
      .Item-Button-Container__Right
        = link_to "#", class: "AnshinBtn" do
          %i.fas.fa-lock{:style => "color: black"}
          %p 安心・安全への取り込み

  .ItemIntroduction__Comments
    .ItemIntroduction__Comments__text
      %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
    .form
      = form_for "#" do |f|
        = f.text_field :text, placeholder: "コメント待つ", class: 'InputBox2'
        = f.submit "コメントする", class: 'Submit-Btn'

